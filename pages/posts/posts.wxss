swiper{
    width: 100%;
    height: 500rpx;
}

swiper image{
    width:100%;
}

.posts-container{
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx 0;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top :1px solid #ededed;
    padding-bottom: 5px;

}
.posts-avatar-date{
    margin: 10rpx 0 20rpx 10px
}
.posts-avatar{
    width: 60rpx;
    height: 60rpx;  
    vertical-align: middle;
}
.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.posts-date{
    margin-left: 20px;
    vertical-align: middle;
    font-size:26rpx;
    margin-bottom: 10px;
}
.post-image{
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 10px;
}
.post-date-text{
    vertical-align:middle;
    margin-right: 20px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}
.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}
